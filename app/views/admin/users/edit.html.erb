<h3>Edit user information</h3>

<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= @user.errors.count %>件のエラーがあります。</h3>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %> :
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %> :
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :introduce %> :
    <%= form.text_field :introduce %>
  </div>

  <div class="field">
    <%= form.label :icon %> :
    <%= form.file_field :icon, class: "icon_file" %>
    <%= image_tag(@user.icon.resize_for_user_icon.url) if @user.icon && @user.icon.url %>
    <%= form.hidden_field :icon_cache %>
  </div>


  <div class="action">
    <%= form.submit class: "btn btn-primary mr-3" %>
  </div>

<% end %>

<%= link_to "user list", admin_users_path, class: "btn btn-primary mr-3" %>
