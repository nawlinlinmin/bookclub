<h3>user list</h3>

<table class="table">

  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag(user.icon.resize_for_user_icon.url) if user.icon && user.icon.url %></td>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'detail', admin_user_path(user), class: "btn btn-primary mr-3" %></td>
      <td><%= link_to 'edit', edit_admin_user_path(user), class: "btn btn-primary mr-3" %></td>
      <td><%= link_to 'delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mr-3" %></td>
    </tr>
  <% end %>
</table>
