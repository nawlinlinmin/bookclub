<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <span><%= comment.body %> by <%= link_to comment.user.name, admin_user_path(comment.user_id) %></span>
        <%= link_to "edit", edit_admin_comment_path(comment.id), class: "btn btn-primary mr-3" %>
        <%= link_to "delete", admin_book_comment_path(comment.book_id, comment.id), method: :delete, class: "btn btn-danger mr-3" %>
      </li>
    <% end %>
  <% end %>
</ul>
