<h3>edit comment</h3>

<%= form_with(model: [:admin, @comment], local: true) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h3><%= @comment.errors.count %>件のエラーがあります。</h3>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :book_id %>
  <%= form.hidden_field :user_id %>


  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to "book details", admin_book_path(@comment.book_id), class: "btn btn-primary mr-3" %>
